{
	"name": "kirbi-random",
	"description": "adds a bunch of random fact commands and fun stuff to Kirbi",
	"version": "0.1.0",
	"license": "Apache-2.0",
	"readme": "README.md",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Richardson-Media-House/kirbi-random.git"
	},
	"author": "Nate Richardson <hello@naterichardson.com> (https://naterichardson.com)",
	"contributors": [
		"Matt Carroll <admin@develogix.com> (https://develogix.com)",
		"Joseph Moran III <joseph.moraniii@gmail.com> (https://josephmoran.co)"
	],
	"main": "random.js",
	"dependencies": {
		"chalk": "^2.1.0",
		"request": "^2.81.0"
	},
	"devDependencies": {
		"xo": "^0.18.2"
	},
	"xo": {
		"rules": {
			"camelcase": "off",
			"linebreak-style": [
				"error",
				"windows"
			],
			"no-negated-condition": "off",
			"no-prototype-builtins": "warn",
			"radix": "warn",
			"guard-for-in": "warn",
			"object-curly-spacing": [
				"error",
				"always",
				{
					"arraysInObjects": false
				}
			]
		}
	},
	"scripts": {
		"test": "xo"
	}
}
